/dts-v1/;
#include "sun8i-v3.dtsi"
#include "sunxi-common-regulators.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	model = "Hardkernel FoxNux One";
	compatible = "hardkernel,foxnux-one", "sochip,s3",
		     "allwinner,sun8i-v3";

	aliases {
		serial0 = &uart0;
		ethernet0 = &emac;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	leds {
        	compatible = "gpio-leds";
	        act_led {
	                label = "act_led:blue:usr";
	                gpios = <&pio 5 6 GPIO_ACTIVE_LOW>; // PF6 5 6 active_low 
	                linux,default-trigger = "mmc0";
	                default-state = "on";
	        };
	};

	backlight: backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm 0 1000000 1>;
		brightness-levels = <0 30 40 50 60 70 100>;
		default-brightness-level = <6>;
	};

	panel: panel {
		#address-cells = <1>;
		#size-cells = <0>;
		#compatible = "urt,umsh-8596md-t", "simple-panel";
		compatible = "avic,tm070ddh03", "simple-panel";
		power-supply = <&reg_vcc3v3>;
		port@0 {
			reg = <0>;
			backlight = <&backlight>;
			#address-cells = <1>;
			#size-cells = <0>;
			panel_input: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&tcon0_out_lcd>;
			};
		};
	};
};

&codec {
	allwinner,audio-routing =
		"Headphone", "HP",
		"Headphone", "HPCOM";
	status = "okay";
};

&de {
	status = "okay";
};

&i2c0 {
	status = "okay";

	gt911: touchscreen@14 {
        compatible = "goodix,gt911";
        reg = <0x14>;
        interrupt-parent = <&pio>;
        interrupts = <1 11 IRQ_TYPE_EDGE_FALLING>; /* (PB11) */
        pinctrl-names = "default";
        irq-gpios = <&pio 1 11 GPIO_ACTIVE_HIGH>; /* (PB11) */
        reset-gpios = <&pio 1 10 GPIO_ACTIVE_HIGH>; /* RST (PB10) */
	AVDD28-supply = <&reg_vcc3v3>; 
	VDDIO-supply = <&reg_vcc3v3>;
    };
};

&csi1 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&csi1_clk &csi1_8bit>;

	port {
		csi1_ep: endpoint {
			remote-endpoint = <&ov7670_0>;
			bus-width = <8>;
			data-shift = <0>;	
			/* If hsync-active/vsync-active are missing,
			   embedded BT.656 sync is used */
			hsync-active = <0>;	/* Active low */
			vsync-active = <1>;	/* Active high */
			data-active = <1>; 	/* Active high */
			pclk-sample = <1>;	/* Rising */ 
		};
	};
};

&i2c1 {
    	pinctrl-0 = <&i2c1_pins>;
	pinctrl-names = "default";
	status = "okay";

	ov7670: camera@21 {
		compatible = "ovti,ov7670";
		reg = <0x21>;
		pinctrl-names = "default";
		pinctrl-0 = <&csi1_mclk>;
		clocks = <&ccu CLK_CSI1_MCLK>;
		clock-names = "xclk";
		assigned-clock-rates = <24000000>;
		port {
			ov7670_0: endpoint {
				remote-endpoint = <&csi1_ep>;
				bus-width = <8>;
				hsync-active = <1>;	/* Active high */
				vsync-active = <1>;	/* Active high */
				data-active = <1>;  	/* Active high */
				pclk-sample = <1>;	/* Rising */
			};
		};
	};
};

&lradc {
	vref-supply = <&reg_vcc3v0>;
	status = "okay";

	button@200 {
		label = "Volume Up";
		linux,code = <KEY_VOLUMEUP>;
		channel = <0>;
		voltage = <200000>;
	};

	button@400 {
		label = "Volume Down";
		linux,code = <KEY_VOLUMEDOWN>;
		channel = <0>;
		voltage = <400000>;
	};

	button@600 {
		label = "Select";
		linux,code = <KEY_SELECT>;
		channel = <0>;
		voltage = <600000>;
	};

	button@800 {
		label = "Start";
		linux,code = <KEY_OK>;
		channel = <0>;
		voltage = <800000>;
	};
};

&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm0_pins>;
	status = "okay";
};

&tcon0 {
	pinctrl-names = "default";
	pinctrl-0 = <&lcd_rgb666_pins_a>;
	status = "okay";
};

&tcon0_out {
	tcon0_out_lcd: endpoint@0 {
		reg = <0>;
		remote-endpoint = <&panel_input>;
	};
};

&emac {
	allwinner,leds-active-low;
	status = "okay";
};

&mmc0 {
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&mmc1 {
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&ehci0 {
        status = "okay";
};

&ohci0 {
	status = "okay";
};

&uart0 {
	pinctrl-0 = <&uart0_pb_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&uart1 {
	pinctrl-0 = <&uart1_pg_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&uart2 {
        pinctrl-0 = <&uart2_pb_pins>;
        pinctrl-names = "default";
        status = "okay";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	usb0_id_det-gpios = <&pio 2 10 GPIO_ACTIVE_HIGH>; // Assign a unused GPIO as a dummy.
	//usb0_id_det-gpios = <&pio 5 6 GPIO_ACTIVE_HIGH>;
	status = "okay";
};

&spi0 {
	pinctrl-names = "default"; 
	pinctrl-0 = <&spi0_pins>; 
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	spidev@0{
		compatible = "rohm,dh2228fv";
		reg = <0>;
		spi-max-frequency = <1000000>;
	};
};

&pio {
	vcc-pb-supply = <&reg_vcc3v3>;
	vcc-pc-supply = <&reg_vcc3v3>;
	vcc-pd-supply = <&reg_vcc3v3>;
	vcc-pe-supply = <&reg_vcc3v3>;
	vcc-pf-supply = <&reg_vcc3v3>;
	vcc-pg-supply = <&reg_vcc3v3>;

	csi1_8bit: csi1-8bit@0 {
		pins = "PE8","PE9","PE10","PE11","PE12","PE13","PE14","PE15";
		bias-pulldown;
		function = "csi";
    	};

	csi1_clk: csi1-clk@0 {
		pins = "PE0","PE2","PE3";
		bias-disable;
		function = "csi";
    	};

 	csi1_mclk: csi1-mclk@0 {
		pins = "PE1";
		bias-disable;
		function = "csi";
    	};

	uart1_pg_pins: uart1-pg-pins {
		pins = "PG6", "PG7";
		function = "uart1";
	};

	uart2_pb_pins: uart1-pb-pins {
		pins = "PB0", "PB1";
		function = "uart2";
	};
};

&reg_vcc5v0 {
	status = "disabled";
};
