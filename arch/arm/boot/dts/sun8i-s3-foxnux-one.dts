/dts-v1/;
#include "sun8i-v3.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	model = "Hardkernel FoxNux One";
	compatible = "hardkernel,foxnux-one", "sochip,s3",
		     "allwinner,sun8i-v3";

	aliases {
		serial0 = &uart0;
		ethernet0 = &emac;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	leds {
        	compatible = "gpio-leds";
	        act_led {
	                label = "act_led:blue:usr";
	                gpios = <&pio 5 6 GPIO_ACTIVE_LOW>; // PF6 5 6 active_low 
	                linux,default-trigger = "mmc0";
	                default-state = "on";
	        };
	};

	reg_vcc3v3: vcc3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
	};

	backlight: backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm 0 1000000 1>;
		brightness-levels = <0 30 40 50 60 70 100>;
		default-brightness-level = <6>;
	};

	panel: panel {
		#address-cells = <1>;
		#size-cells = <0>;
		#compatible = "urt,umsh-8596md-t", "simple-panel";
		compatible = "avic,tm070ddh03", "simple-panel";
		port@0 {
			reg = <0>;
			backlight = <&backlight>;
			#address-cells = <1>;
			#size-cells = <0>;

			panel_input: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&tcon0_out_lcd>;
			};
		};
	};
};

&codec {
	allwinner,audio-routing =
		"Headphone", "HP",
		"Headphone", "HPCOM";
	status = "okay";
};

&de {
	status = "okay";
};

&i2c0 {
	status = "okay";

	gt911: touchscreen@14 {
        compatible = "goodix,gt911";
        reg = <0x14>;
        interrupt-parent = <&pio>;
        interrupts = <1 11 IRQ_TYPE_EDGE_FALLING>; /* (PB11) */
        pinctrl-names = "default";
        irq-gpios = <&pio 1 11 GPIO_ACTIVE_HIGH>; /* (PB11) */
        reset-gpios = <&pio 1 10 GPIO_ACTIVE_HIGH>; /* RST (PB10) */
    };
};

&lradc {
	vref-supply = <&reg_vcc3v3>;
	status = "okay";

	button-430 {
		label = "key0";
		linux,code = <BTN_0>;
		channel = <0>;
		voltage = <430000>;
	};

	button-1060 {
		label = "key1";
		linux,code = <BTN_1>;
		channel = <0>;
		voltage = <1060000>;
	};

	button-1650 {
		label = "key2";
		linux,code = <BTN_2>;
		channel = <0>;
		voltage = <1650000>;
	};
};

&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm0_pins>;
	status = "okay";
};

&tcon0 {
	pinctrl-names = "default";
	pinctrl-0 = <&lcd_rgb666_pins_a>;
	status = "okay";
};

&tcon0_out {
	tcon0_out_lcd: endpoint@0 {
		reg = <0>;
		remote-endpoint = <&panel_input>;
	};
};

&emac {
	allwinner,leds-active-low;
	status = "okay";
};

&mmc0 {
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&mmc1 {
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&ehci0 {
        status = "okay";
};

&ohci0 {
	status = "okay";
};

&uart0 {
	pinctrl-0 = <&uart0_pb_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	usb0_id_det-gpios = <&pio 2 10 GPIO_ACTIVE_HIGH>; // Assign a unused GPIO as a dummy.
	//usb0_id_det-gpios = <&pio 5 6 GPIO_ACTIVE_HIGH>;
	status = "okay";
};
